{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "digitization_bag.json",
	"type": "object",
	"title": "Ursa Major Digitization Bag Schema",
	"allOf": [{
		"$id": "/digitization_bag",
		"type": "object",
		"title": "Bag",
		"required": [
			"identifier",
			"origin",
			"rights_statements"],
		"properties": {
			"identifier": {
				"type": "string"
			},
			"origin": {
				"type": "string",
				"enum": ["digitization"]
			},
			"rights_statements": {
				"type": "array",
				"minItems": 1,
				"items": {
					"allOf": [{
						"$ref": "urn:base#/$defs/rights_statement"
					}]
				}
			}
		}
	}]
}
