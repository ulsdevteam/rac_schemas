{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "aurora_bag.json",
	"type": "object",
	"title": "Ursa Major Aurora Bag Schema",
	"allOf": [{
		"$id": "#/aurora_bag",
		"type": "object",
		"title": "Bag",
		"required": [
			"organization",
			"bag_it_name",
			"identifier",
			"origin"],
		"properties": {
			"url": {
				"type": "string"
			},
			"identifier": {
				"type": "string"
			},
			"organization": {
				"type": "string"
			},
			"origin": {
				"type": "string",
				"enum": ["aurora"]
			},
			"bag_it_name": {
				"type": "string",
				"maxLength": 60
			},
			"process_status": {
				"enum": [10, 20, 30, 40, 60, 70, 80, 85, 90],
				"minimum": 0,
				"maximum": 65535
			},
			"file_size": {
				"type": "string"
			},
			"file_type": {
				"type": "string"
			},
			"appraisal_note": {
				"type": ["string", "null"]
			},
			"additional_error_info": {
				"type": ["string", "null"],
				"maxLength": 255
			},
			"metadata": {
				"properties": {
					"source_organization": {
						"type": "string"
					},
					"title": {
						"type": "string",
						"maxLength": 256
					},
					"record_creators": {
						"type": "array",
						"items": {
							"properties": {
								"name": {
									"type": "string",
									"maxLength": 100
								},
								"type": {
									"enum": ["family", "organization", "person"]
								}
							},
							"required": ["name", "type"]
						}
					},
					"internal_sender_description": {
						"type": "string"
					},
					"date_start": {
						"type": "string",
						"format": "date-time"
					},
					"date_end": {
						"type": "string",
						"format": "date-time"
					},
					"record_type": {
						"type": "string",
						"maxLength": 256
					},
					"language": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"bag_count": {
						"type": ["string", "null"],
						"maxLength": 10
					},
					"bag_group_identifier": {
						"type": ["string", "null"],
						"maxLength": 256
					},
					"payload_oxum": {
						"type": "string",
						"maxLength": 20
					},
					"bagit_profile_identifier": {
						"type": "string",
						"format": "uri",
						"maxLength": 200
					},
					"bagging_date": {
						"type": "string",
						"format": "date-time"
					},
					"origin": {
						"type": "string",
						"maxLength": 10
					}
				},
				"required": [
					"title",
					"record_creators",
					"internal_sender_description",
					"date_start",
					"date_end",
					"record_type",
					"payload_oxum",
					"bagit_profile_identifier",
					"bagging_date"],
				"type": "object"
			},
			"rights_statements": {
				"type": "array",
				"items": {
					"properties": {
						"rights_basis": {
							"type": "string"
						},
						"determination_date": {
							"type": ["string", "null"]
						},
						"jurisdiction": {
							"type": ["string", "null"]
						},
						"start_date": {
							"type": "string"
						},
						"end_date": {
							"type": "string"
						},
						"note": {
							"type": "string"
						},
						"status": {
							"type": ["string", "null"]
						},
						"terms": {
							"type": ["string", "null"]
						},
						"citation": {
							"type": ["string", "null"]
						},
						"other_rights_basis": {
							"type": ["string", "null"]
						},
						"rights_granted": {
							"type": "array",
							"items": {
								"properties": {
									"act": {
										"enum": [
											"publish",
											"disseminate",
											"replicate",
											"migrate",
											"modify",
											"use",
											"delete"]
									},
									"start_date": {
										"type": ["string", "null"],
										"format": "date"
									},
									"end_date": {
										"type": "string"
									},
									"note": {
										"type": "string"
									},
									"restriction": {
										"enum": ["allow", "disallow", "conditional"]
									}
								},
								"required": ["act", "restriction"]
							}
						}
					},
					"required": ["rights_granted"]
				}
			},
			"events": {
				"type": "array",
				"items": {
					"properties": {
						"url": {
							"type": "string"
						},
						"type": {
							"type": "string"
						},
						"summary": {
							"type": "string"
						},
						"object": {
							"type": "string"
						},
						"result": {
							"properties": {
								"name": {
									"type": "string"
								}
							},
							"type": "object"
						},
						"endTime": {
							"type": "string"
						}
					},
					"required": ["summary", "result"]
				}
			},
			"archivesspace_identifier": {
				"type": ["string", "null"],
				"maxLength": 255
			},
			"archivesspace_parent_identifier": {
				"type": ["string", "null"],
				"maxLength": 255
			},
			"created_time": {
				"type": "string",
				"format": "date-time"
			},
			"modified_time": {
				"type": "string",
				"format": "date-time"
			}
		}
	}]
}
