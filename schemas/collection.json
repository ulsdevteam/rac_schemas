{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "collection.json",
	"type": "object",
	"title": "RAC JSON Schema",
	"allOf": [{
		"$id": "/collection",
		"type": "object",
		"title": "Collection",
		"required": [
			"category",
			"dates",
			"extents",
			"external_identifiers",
			"formats",
			"group",
			"languages",
			"online",
			"position",
			"title",
			"type"
		],
		"properties": {
			"category": {
				"$id": "/collection/properties/category",
				"type": "string",
				"title": "Collection Category",
				"enum": [
					"collection"
				]
			},
			"title": {
				"$id": "/collection/properties/title",
				"type": "string",
				"title": "Collection Title",
				"examples": [
					"John D. Rockefeller papers"
				]
			},
			"type": {
				"$id": "/collection/properties/type",
				"type": "string",
				"enum": [
					"collection"
				]
			},
			"dates": {
				"type": "array",
				"minItems": 1,
				"items": {
					"allOf": [{
						"$ref": "urn:base#/$defs/date"
					}]
				}
			},
			"extents": {
				"type": "array",
				"minItems": 1,
				"items": {
					"allOf": [{
						"$ref": "urn:base#/$defs/extent"
					}]
				}
			},
			"notes": {
				"type": "array",
				"items": {
					"allOf": [{
						"$ref": "urn:base#/$defs/note"
					}]
				}
			},
			"terms": {
				"type": "array",
				"items": {
					"allOf": [{
						"$ref": "urn:base#/$defs/reference"
					}]
				}
			},
			"people": {
				"type": "array",
				"items": {
					"allOf": [{
						"$ref": "urn:base#/$defs/reference"
					}]
				}
			},
			"organizations": {
				"type": "array",
				"items": {
					"allOf": [{
						"$ref": "urn:base#/$defs/reference"
					}]
				}
			},
			"families": {
				"type": "array",
				"items": {
					"allOf": [{
						"$ref": "urn:base#/$defs/reference"
					}]
				}
			},
			"creators": {
				"type": "array",
				"items": {
					"allOf": [{
						"$ref": "urn:base#/$defs/reference"
					}]
				}
			},
			"languages": {
				"type": "array",
				"minItems": 1,
				"items": {
					"allOf": [{
						"$ref": "urn:base#/$defs/language"
					}]
				}
			},
			"rights": {
				"type": "array",
				"items": {
					"allOf": [{
						"$ref": "urn:base#/$defs/rights_statement"
					}]
				}
			},
			"ancestors": {
				"type": "array",
				"items": {
					"allOf": [{
						"$ref": "urn:base#/$defs/reference"
					}]
				}
			},
			"formats": {
				"type": "array",
				"minItems": 1,
				"items": {
						"oneOf": [
							{
								"type": "string",
								"enum": [
									"documents",
									"audio",
									"photographs",
									"moving image"
								]
							}
						]
					}
			},
			"parent": {
				"type": ["string", "null"]
			},
			"position": {
				"type": "number"
			},
			"online": {
				"type": "boolean"
			},
			"group": {
				"type": "object",
				"allOf": [{
					"$ref": "urn:base#/$defs/group"
				}]
			},
			"external_identifiers": {
				"type": "array",
				"minItems": 1,
				"items": {
					"allOf": [{
						"$ref": "urn:base#/$defs/external_identifier"
					}]
				}
			}
		}
	}]
}
